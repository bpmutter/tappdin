extends layout
block content
  include beer-list
  head
    link(rel='stylesheet' type='text/css' href='/styles/search-beer.css')
  body
    div.slide
      .beer__search-page
        .main
          .beer__search-box
            .beer__search-content
              h2.title Top Results for "#{query}"
              div.filter
                form.filter__form.filter__form--active(method="post" action="/search/beers")
                  input.section-toggle#beers(type="submit" value="Beers") 
                  input(type="hidden" name="query" value=query)
                form.filter__form(method="post" action="/search/breweries")
                  input.section-toggle#breweries(type="submit" value="Breweries") 
                  input(type="hidden" name="query" value=query)
              if beers.length
                each beer in beers 
                  +beerlist(beer)
              else 
                p It looks like there weren't any results for your search. Try another search! 

