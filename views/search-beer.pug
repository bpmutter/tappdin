extends layout
block content
  include beer-list
  head
    link(rel='stylesheet' type='text/css' href='/styles/search-beer.css')
  body
    div.slide
      .beer__search-page
        .main
          .beer__search-box
            .beer__search-content
              h2.title Top Results for "#{query}"
              div.filter
                a.section-toggle#beers(href="") Beers
                a.section-toggle#breweries(href="") Breweries
              if beers.length
                each beer in beers 
                  +beerlist(beer)
              else 
                p It looks like there weren't any results for your search. Try another search! 

