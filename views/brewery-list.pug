mixin brewerylist(brewery)
  head  
    link(rel="stylesheet" href="/styles/search-brewery.css")
  
  .brewery__search-result
    a.brewery__label(href=`/breweries/${brewery.id}`)
      img.brewery__label-image(src=brewery.image)
    .brewery__basic-info
      a(href=`/breweries/${brewery.id}`).brewery__name=brewery.name
      p.brewery__location=brewery.location
    .brewery__details
      if brewery.Beer
        p.brewery__beers #{brewery.Beer.length} beers
      else 
        p.brewery__beers No beers!
      if brewery.Checkin
        p.brewery__ratings #{brewery.Checkin.length} checkins
      else 
        p.ratings No checkins yet!
      if brewery.avgRaging
        p.brewery__rating-container #{brewery.avgRating} üç∫
      else
        p.brewery__rating-container No ratings yet!

