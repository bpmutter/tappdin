mixin beerlist(beer)
  .beer__container-beer-list
          .beer-item
            a(href=`/beers/${beer.id}`).label
              img.label__image(src=beer.image)
            .beer-details
              a(href=`/beers/${beer.id}`).name=beer.name
              a(href=`/breweries/${beer.Brewery.id}`).brewery=beer.Brewery.name
              p.style=beer.BeerType.typeOfBeer
              p.description=beer.description
            .checkin__container
              a.checkin-box(href=`/checkins/${beer.id}`)
          .details
            p.abv ABV #{beer.abv}
            if beer.ibu
              p.ibu IBU #{beer.ibu}
            else 
              p.ibu N/A
            p.rating-container 
              if beer.avgRating
                #{beer.avgRating} 🍺
              else 
                span No ratings yet!
            p.ratings 
              if beer.Checkin
                span #{beer.Checkin.length} checkins
              else 
                span No checkins yet! 
            p.date Added: #{beer.createdAt}
